<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zjrt.xuekaotong.activity.VideoDetail">

    <com.tencent.qcload.playersdk.ui.VideoRootFrame
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.tencent.qcload.playersdk.ui.VideoRootFrame>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015年一级建造师市政工程精讲课"
            android:textColor="#333"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="城镇道路工程结构与材料，城镇道路路基施工，城镇道路基层施工，城镇道路面层施工城市桥梁结构形式及..." />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1298人正在学习"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:textColor="#68aef4"
                android:background="@drawable/rounded_edittext2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon56"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/down"
                android:layout_toStartOf="@+id/down" />

            <ImageView
                android:id="@+id/down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon57"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img3"
                android:layout_toStartOf="@+id/img3" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon58"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4"
            android:layout_marginTop="27dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/list_divider3"
        android:dividerHeight="1dp"
        android:choiceMode="multipleChoice"></ListView>
</LinearLayout>
