<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zjrt.xuekaotong.activity.Register"
    android:background="#f4f4f4"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#fafafa">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon45"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/collect_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="20dp"
            android:layout_centerInParent="true" />
        <TextView
            android:id="@+id/register_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="注册"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textColor="#3b9fff"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7e6e6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/icon43"
            android:background="#fff"
            android:paddingLeft="14dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:drawablePadding="8dp"
            android:hint=" 手机号/用户名"
            android:textColorHint="#cccccc"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/icon44"
            android:background="#fff"
            android:paddingLeft="14dp"
            android:drawablePadding="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:hint=" 密码"
            android:textColorHint="#cccccc"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#3b9fff"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="16dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textSize="14dp"
            android:textColor="#3a9fff"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</LinearLayout>
