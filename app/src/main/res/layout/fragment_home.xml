<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#3b9fff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="#fff"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/set_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon37" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:id="@+id/mine">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/image1" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="14dp"
                    android:layout_toRightOf="@+id/photo"
                    android:text="用户名"
                    android:textColor="#333333"
                    android:textSize="13dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个性签名"
                    android:textColor="#333333"
                    android:textSize="11dp"
                    android:layout_below="@+id/name"
                    android:layout_alignLeft="@+id/name"
                    android:layout_marginTop="5dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon28"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/exchang"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="学币兑换"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:gravity="center"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="22dp"
                    android:background="#e5e5e5"/>
                <TextView
                    android:id="@+id/sign_in"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="点击签到"
                    android:textColor="#333333"
                    android:textSize="13dp"
                    android:gravity="center"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f4f4f4"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"/>
            <RelativeLayout
                android:id="@+id/my_order"
                android:layout_width="match_parent"
                android:layout_height="47dp">
                <ImageView
                    android:id="@+id/icon_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_order"
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:textSize="16dp"
                    android:layout_marginLeft="19dp"
                    android:textColor="#333333"
                    android:layout_toRightOf="@+id/icon_order"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon29"
                    android:layout_marginRight="12dp"
                    android:layout_alignBottom="@+id/icon_order"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>
            <RelativeLayout
                android:id="@+id/my_wallet"
                android:layout_width="match_parent"
                android:layout_height="47dp">
                <ImageView
                    android:id="@+id/icon_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_wallet"
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:textSize="16dp"
                    android:layout_marginLeft="19dp"
                    android:textColor="#333333"
                    android:layout_toRightOf="@+id/icon_wallet"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon29"
                    android:layout_marginRight="12dp"
                    android:layout_alignBottom="@+id/icon_wallet"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>
            <RelativeLayout
                android:id="@+id/my_coupon"
                android:layout_width="match_parent"
                android:layout_height="47dp">
                <ImageView
                    android:id="@+id/icon_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_coupon"
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的优惠券"
                    android:textSize="16dp"
                    android:layout_marginLeft="19dp"
                    android:textColor="#333333"
                    android:layout_toRightOf="@+id/icon_coupon"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon29"
                    android:layout_marginRight="12dp"
                    android:layout_alignBottom="@+id/icon_coupon"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f4f4f4"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"/>
            <RelativeLayout
                android:id="@+id/my_collect"
                android:layout_width="match_parent"
                android:layout_height="47dp">
                <ImageView
                    android:id="@+id/icon_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_collect"
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的收藏"
                    android:textSize="16dp"
                    android:layout_marginLeft="19dp"
                    android:textColor="#333333"
                    android:layout_toRightOf="@+id/icon_collect"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon29"
                    android:layout_marginRight="12dp"
                    android:layout_alignBottom="@+id/icon_collect"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>
            <RelativeLayout
                android:id="@+id/my_question"
                android:layout_width="match_parent"
                android:layout_height="47dp">
                <ImageView
                    android:id="@+id/icon_questions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_questions"
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的题库"
                    android:textSize="16dp"
                    android:layout_marginLeft="19dp"
                    android:textColor="#333333"
                    android:layout_toRightOf="@+id/icon_questions"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon29"
                    android:layout_marginRight="12dp"
                    android:layout_alignBottom="@+id/icon_questions"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f4f4f4"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"/>
            <RelativeLayout
            android:id="@+id/my_share"
            android:layout_width="match_parent"
            android:layout_height="47dp">
            <ImageView
                android:id="@+id/icon_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_share"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享好友"
                android:textSize="16dp"
                android:layout_marginLeft="19dp"
                android:textColor="#333333"
                android:layout_toRightOf="@+id/icon_share"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon29"
                android:layout_marginRight="12dp"
                android:layout_alignBottom="@+id/icon_share"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="17dp" />
        </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>
            <RelativeLayout
                android:id="@+id/my_message"
                android:layout_width="match_parent"
                android:layout_height="47dp">
                <ImageView
                    android:id="@+id/icon_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_new"
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息中心"
                    android:textSize="16dp"
                    android:layout_marginLeft="19dp"
                    android:textColor="#333333"
                    android:layout_toRightOf="@+id/icon_message"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon29"
                    android:layout_marginRight="12dp"
                    android:layout_alignBottom="@+id/icon_message"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>
            <RelativeLayout
                android:id="@+id/my_feedback"
                android:layout_width="match_parent"
                android:layout_height="47dp">
                <ImageView
                    android:id="@+id/icon_feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_feedback"
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/feedback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="反馈意见"
                    android:textSize="16dp"
                    android:layout_marginLeft="19dp"
                    android:textColor="#333333"
                    android:layout_toRightOf="@+id/icon_feedback"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon29"
                    android:layout_marginRight="12dp"
                    android:layout_alignBottom="@+id/icon_feedback"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e5e5e5"/>
            <RelativeLayout
                android:id="@+id/my_cache"
                android:layout_width="match_parent"
                android:layout_height="47dp">
                <ImageView
                    android:id="@+id/icon_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_share"
                    android:layout_marginLeft="18dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的下载"
                    android:textSize="16dp"
                    android:layout_marginLeft="19dp"
                    android:textColor="#333333"
                    android:layout_toRightOf="@+id/icon_cache"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon29"
                    android:layout_marginRight="12dp"
                    android:layout_alignBottom="@+id/icon_cache"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="17dp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f4f4f4"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
