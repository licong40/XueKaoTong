<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    
    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/checkBox"
        android:layout_centerVertical="true"
        android:src="@mipmap/image6" 
        android:layout_marginLeft="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一级建造师市政精讲课"
            android:gravity="center"/>
        <ProgressBar
            android:id="@+id/custom_choose_sb"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/seekbar_define_style2"
            android:layout_width="200dp"
            android:layout_below="@id/title"
            android:focusableInTouchMode="false"
            android:layout_height="wrap_content"
            android:minHeight="2dp"
            android:layout_marginTop="10dp"/>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/custom_choose_sb"
           android:layout_alignParentBottom="true"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp">
           <TextView
               android:id="@+id/yixiazai"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2M/"/>
           <TextView
               android:id="@+id/quanbu"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="105M"
               android:layout_toRightOf="@+id/yixiazai"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="1.6MB/s"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"/>
       </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>