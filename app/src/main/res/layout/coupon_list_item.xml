<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="111dp"
    android:orientation="horizontal"
    android:background="#f4f4f4">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:background="@mipmap/icon59_1">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="30dp"
                android:textColor="#4a9fff"
                android:layout_centerInParent="true"
                android:id="@+id/value" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="18dp"
                android:textColor="#3a9fff"
                android:layout_toRightOf="@+id/value"
                android:layout_alignBaseline="@+id/value"/>
            <TextView
                android:id="@+id/over_due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已过期"
                android:textSize="12dp"
                android:textColor="#cacaca"
                android:layout_below="@+id/value"
                android:layout_alignLeft="@+id/value"
                android:visibility="gone"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp">
            <TextView
                android:id="@+id/max_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单满50元可用"
                android:textSize="10dp"
                android:drawableLeft="@mipmap/icon60"
                android:drawablePadding="10dp"/>
            <TextView
                android:id="@+id/card_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仅限尾号0010的手机使用"
                android:textSize="10dp"
                android:drawableLeft="@mipmap/icon60"
                android:drawablePadding="10dp"
                android:layout_below="@+id/max_num"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期至：2016年03.01 23.59"
                android:textSize="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@mipmap/icon59_2">
        <TextView
            android:id="@+id/type"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:text="系统赠送红包"
            android:textSize="12dp"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"/>
    </RelativeLayout>
</LinearLayout>